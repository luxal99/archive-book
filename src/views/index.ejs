<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="css/index.css">

    <title>Welcome</title>
</head>
<body>
<div class="wrapper">
    <div class="container">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home"
                        type="button" role="tab" aria-controls="pills-home" aria-selected="true">Locations
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile"
                        type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Marks
                </button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row">
                    <div class="col">
                        <h1>Location</h1>
                        <div id="form-row">
                            <form>
                                <input class="form-control" type="text" name="name" id="locationName"
                                       placeholder="Name">
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn" onclick="addLocation()">+</button>
                                <button class="btn btn-danger" onclick="hideAddForm()">x</button>
                            </div>

                        </div>
                    </div>
                    <div class="col text-right">
                        <button class="btn default-btn" onclick="showAddForm()">Add</button>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <h1>Marks</h1>
            </div>
        </div>
    </div>
</div>
<script>

  function showAddForm() {
    document.getElementById('form-row').style.display = 'block'
  }

  function hideAddForm() {
    document.getElementById('form-row').style.display = 'none'
  }

  function addLocation() {
    fetch('http://localhost:8080/location', {
      method: "POST",
      headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ name: document.getElementById('locationName').value })
    })
  }
</script>
<script src="css/bootstrap/dist/js/bootstrap.js"></script>
<script src="css/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>

</body>
</html>
