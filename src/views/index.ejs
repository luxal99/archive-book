<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />

    <title>Welcome</title>
</head>
<body>
<div class="wrapper">
    <div class="container">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#location"
                        type="button" role="tab" aria-controls="pills-home" aria-selected="true">Locations
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#marks"
                        type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Marks
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#document"
                        type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Archive book
                </button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="location" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row">
                    <div class="col-sm">
                        <h1>Location</h1>
                        <h3>Current locations</h3>
                        <div id="edit-form-row">
                            <form>
                                <input class="form-control" type="hidden" name="idLocation"
                                       placeholder="Name">
                                <input class="form-control" type="text" name="name" id="editLocationName"
                                       placeholder="Name">
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn"
                                        onclick="update()">
                                    +
                                </button>
                                <button class="btn btn-danger" onclick="hide('editM-form-row')">x</button>
                            </div>

                        </div>
                        <% for (var i = 0; i < listOfLocations.length ; i++) { %>
                            <div class="location-item">
                                <div class="row">
                                    <div class="col-2">
                                        <h6><b>ID</b></h6>
                                        <h4> <%= listOfLocations[i].id; %> </h4>
                                    </div>
                                    <div class="col-6">
                                        <h6><b>Name</b></h6>
                                        <h4> <%= listOfLocations[i].name; %> </h4>
                                    </div>
                                    <div class="col-4">
                                        <button class="btn " style="color: #ff4a4a"
                                                onclick="deleteLocation(<%= listOfLocations[i].id %>)">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn " style="color: #ffa54a"
                                                onclick="setValueToInput('edit-form-row',[{name:'editLocationName',value:`<%= listOfLocations[i].name %>`},
                                                        {name:'idLocation',value:`<%= listOfLocations[i].id %>`}])">
                                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="divider"></div>
                            </div>
                        <% } %>
                        <div id="form-row">
                            <form>
                                <input class="form-control" type="text" name="name" id="locationName"
                                       placeholder="Name">
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn" onclick="addLocation()">+</button>
                                <button class="btn btn-danger" onclick="hide('form-row')">x</button>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm text-right">
                        <button class="btn default-btn" onclick="show('form-row')">Add</button>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="marks" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="row">
                    <div class="col-sm">
                        <h1>Marks</h1>
                        <h3>Current marks</h3>
                        <div id="edit-mark-row">
                            <form>
                                <input class="form-control" type="text" name="name" id="editMarkName"
                                       placeholder="Name">
                                <input class="form-control" type="hidden" name="id" id="idMark"
                                       placeholder="Name">
                                <select class="form-control" id="editIdLocation" name="idLocation"
                                        style="margin-top: 1em">
                                    <% for(var x = 0; x < listOfLocations.length; x++) { %>
                                        <option value='<%= listOfLocations[x].id %>'><%= listOfLocations[x].name %></option>
                                    <% } %>
                                </select>
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn"
                                        onclick="updateMark()">
                                    +
                                </button>
                                <button class="btn btn-danger" onclick="hide('edit-mark-row')">x</button>
                            </div>

                        </div>
                        <% for (var j = 0; j < listOfMarks.length ; j++) { %>
                            <div class="location-item">
                                <div class="row">
                                    <div class="col-2">
                                        <h6><b>ID</b></h6>
                                        <h4> <%= listOfMarks[j].id; %> </h4>
                                    </div>
                                    <div class="col-2">
                                        <h6><b>Name</b></h6>
                                        <h4> <%= listOfMarks[j].name; %> </h4>
                                    </div>
                                    <div class="col-3">
                                        <h6><b>Location</b></h6>
                                        <h4> <%= listOfMarks[j].idLocation.name; %> </h4>
                                    </div>
                                    <div class="col-4">
                                        <button class="btn " style="color: #ff4a4a"
                                                onclick="deleteMark((`<%= listOfMarks[j].id %>`))">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn " style="color: #ffa54a"
                                                onclick="setValueToInput('edit-mark-row',[
                                                        {name:'editIdLocation',value:`<%= listOfMarks[j].idLocation.id %>`},
                                                        {name:'editMarkName',value:`<%= listOfMarks[j].name %>`},
                                                        {name:'idMark',value:`<%= listOfMarks[j].id %>`}])">
                                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="divider"></div>
                            </div>
                        <% } %>
                        <div id="mark-form-row">
                            <form>
                                <input class="form-control" type="text" name="name" id="markName"
                                       placeholder="Name">
                                <select class="form-control" id="idLocation" name="idLocation" style="margin-top: 1em">
                                    <% for(var x = 0; x < listOfLocations.length; x++) { %>
                                        <option value='<%= listOfLocations[x].id %>'><%= listOfLocations[x].name %></option>
                                    <% } %>
                                </select>
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn" onclick="addMark()">+</button>
                                <button class="btn btn-danger" onclick="hide('mark-form-row')">x</button>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm text-right">
                        <button class="btn default-btn" onclick="show('mark-form-row')">Add</button>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="document" role="tabpanel" aria-labelledby="pills-profile-tab">
                <h3><b>Create</b></h3>
                <form id="archive-book-form">
                    <input class="form-control" type="text" name="title"
                           placeholder="Name">
                    <input class="form-control" type="text" name="shelfNo"
                           placeholder="Name" style="margin-top: 1em">
                    <textarea class="form-control" type="text" name="note"
                              rows="3"
                              placeholder="Note" style="margin-top: 1em"></textarea>
                    <select class="form-control" name="idLocation"
                            style="margin-top: 1em">
                        <% for(var x = 0; x < listOfLocations.length; x++) { %>
                            <option value='<%= listOfLocations[x].id %>'><%= listOfLocations[x].name %></option>
                        <% } %>
                    </select>
                    <select class="form-control" name="idMark"
                            style="margin: 1em 0">
                        <% for(var x = 0; x < listOfMarks.length; x++) { %>
                            <option value='<%= listOfMarks[x].id %>'><%= listOfMarks[x].name %></option>
                        <% } %>
                    </select>
                </form>
                <label class="custom-upload">
                    <input type="file" multiple id="document-upload">
                    <img src="/img/upload-image-icon-png-11.jpg" width="100px" height="100px">
                </label>
                <% for (var i = 0; i < listOfDocuments.length ; i++) { %>
                    <div class="location-item">
                        <div class="row">
                            <div class="col-2">
                                <h6><b>ID</b></h6>
                                <h4> <%= listOfDocuments[i].id; %> </h4>
                            </div>
                            <div class="col-6">
                                <h6><b>Name</b></h6>
                                <h4> <%= listOfDocuments[i].name; %> </h4>
                            </div>
                            <div class="col-4">
                                <button class="btn " style="color: #ff4a4a">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                                <a style="color: #4BB543" href=`<%= listOfDocuments[i].uri %>`
                                   download=<%= listOfDocuments[i].name %>>
                                    <i class="fa fa-download" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                        <div class="divider"></div>
                    </div>
                <% } %>
                <button class="default-btn btn " style="margin-top: 2em" onclick="create()"><i class="fa fa-floppy-o"
                                                                                               aria-hidden="true"></i>

                    Save
                </button>

            </div>
        </div>
    </div>
</div>

<script>
</script>
<script src="/js/global.js"></script>
<script src="/js/location.js"></script>
<script src="/js/archiveBook.js"></script>
<script src="/js/marks.js">
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

</body>
</html>
