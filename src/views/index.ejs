<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />

    <title>Welcome</title>
</head>
<body>
<div class="wrapper">
    <div class="container">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home"
                        type="button" role="tab" aria-controls="pills-home" aria-selected="true">Locations
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile"
                        type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Marks
                </button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row">
                    <div class="col">
                        <h1>Location</h1>
                        <h3>Current locations</h3>
                        <% for (var i = 0; i < listOfLocations.length ; i++) { %>
                            <div class="location-item">
                                <div class="row">
                                    <div class="col-8">
                                        <h6><b>Name</b></h6>
                                        <h4> <%= listOfLocations[i].name; %> </h4>
                                    </div>
                                    <div class="col-4">
                                        <button class="btn " style="color: #ff4a4a"
                                                onclick="deleteLocation(<%= listOfLocations[i].id %>)">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn " style="color: #ffa54a"
                                                onclick="setValueToInput('edit-form-row','editLocationName',`<%= listOfLocations[i].name %>`)">
                                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                </div>
                                <div id="edit-form-row">
                                    <form>
                                        <input class="form-control" type="text" name="name" id="editLocationName"
                                               placeholder="Name">
                                    </form>
                                    <div class="m-1 text-right">
                                        <button class="btn default-btn" onclick="update(`<%= listOfLocations[i].id %>`)">
                                            +
                                        </button>
                                        <button class="btn btn-danger" onclick="hide('edit-form-row')">x</button>
                                    </div>

                                </div>
                                <div class="divider"></div>
                            </div>
                        <% } %>
                        <div id="form-row">
                            <form>
                                <input class="form-control" type="text" name="name" id="locationName"
                                       placeholder="Name">
                            </form>
                            <div class="m-1 text-right">
                                <button class="btn default-btn" onclick="addLocation()">+</button>
                                <button class="btn btn-danger" onclick="hide('form-row')">x</button>
                            </div>

                        </div>
                    </div>
                    <div class="col text-right">
                        <button class="btn default-btn" onclick="show('form-row')">Add</button>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <h1>Marks</h1>
            </div>
        </div>
    </div>
</div>
<script>

  function show(elementId) {
    document.getElementById(elementId).style.display = "block";
  }

  function hide(elementId) {
    document.getElementById(elementId).style.display = "none";
  }

  function setValueToInput(elementId, inputId, value) {
    show(elementId);
    document.getElementById(inputId).value = value;
  }

  function update(id) {
    fetch("http://localhost:8080/location", {
      method: "PUT",
      headers: {
        "Accept": "application/json",
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        id,
        name: document.getElementById("editLocationName").value,
      }),
    });
  }

  function addLocation() {
    fetch("http://localhost:8080/location", {
      method: "POST",
      headers: {
        "Accept": "application/json",
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ name: document.getElementById("locationName").value }),
    });
  }

  function deleteLocation(idLocation) {
    fetch(`http://localhost:8080/location/${idLocation}`, {
      method: "DELETE",
      headers: {
        "Accept": "application/json",
        "Content-Type": "application/json",
      },
    });
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

</body>
</html>
