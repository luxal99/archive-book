<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href='http://localhost:8080/css/archive-overview.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
          integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />

    <title>Archive overview</title>
</head>
<body id="body">
<div class="wrapper">
    <div class="container">

        <% archive.createdDate = new Date(archive.createdDate); %>
        <div class="inline">
            <div class="m-2">
                <h6 class="text-right fw-bold">Kreirano dana:</h6>
                <h4 class="text-right "><%= archive.createdDate.getDate() + "." + Number.parseInt(archive.createdDate.getMonth() + 1) + "." + archive.createdDate.getUTCFullYear(); %></h4>
            </div>
            <div class="m-2">
                <h6 class="text-right fw-bold">Za godine:</h6>
                <h4 class="text-right "><%= archive.startYear + '-' + archive.endYear %></h4>
            </div>
        </div>
        <h1><%= archive.title; %></h1>
        <h3><b>Broj police/ Fascikla: </b><%= archive.shelfNo; %> /<%= archive.idLocation.name; %> </h3>
        <h3><b>Oznaka: </b><%= archive.idMark.name; %> </h3>
        <h3><b></b></h3>
        <h4><b>Koliƒçina: </b><%= archive.listOfDocuments.length; %></h4>
        <p><%= archive.note; %></p>
        <button type="button" class="btn default-btn" style="margin: 1em 0" data-bs-toggle="modal"
                data-bs-target="#exampleModal">
            <i class="fa fa-cloud-upload" aria-hidden="true"></i> Add
        </button>
        <% for (let i = 0; i < archive.listOfDocuments.length ; i++) { %>
            <div class="location-item">
                <div class="row">
                    <div class="col-sm-2">
                        <h6><b>ID</b></h6>
                        <h4> <%= archive.listOfDocuments[i].id; %> </h4>
                    </div>
                    <div class="col-sm-6">
                        <h6><b>Name</b></h6>
                        <h4> <%= archive.listOfDocuments[i].name; %> </h4>
                    </div>
                    <div class="col-sm-4 text-right">
                        <button class="btn" onclick="deleteDocument(`<%= archive.listOfDocuments[i].id %>`)"
                                style="color: #ff4a4a;pointer-events: all">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                        <a style="color: #4BB543" href='http://localhost:8080<%= archive.listOfDocuments[i].uri %>'
                           download=<%= archive.listOfDocuments[i].name %>>
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="divider"></div>
            </div>
        <% } %>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Upload more documents</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label class="custom-upload" style="margin-top: 1em">
                            <input type="file" multiple id="document-upload">
                            <img src="/img/upload-image-icon-png-11.jpg" width="100px" height="100px">
                        </label>
                    </div>
                    <div class="m-3">
                        <div class="progress">
                            <div class="progress-bar" id="progress" role="progressbar" aria-valuenow="75"
                                 aria-valuemin="75"
                                 aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="success-btn" onclick="completeUpload()" class="btn btn-success"
                                data-bs-dismiss="modal">Done
                        </button>
                        <button type="button" class="btn default-btn"
                                onclick="uploadDocuments(`<%= archive.id %>`,()=>{document.getElementById('success-btn').style.display = 'block';})">
                            <i class="fa fa-cloud-upload" aria-hidden="true"></i> Upload
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/global.js"></script>
<script src="/js/archiveBook.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>
</html>
